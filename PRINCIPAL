import java.util.ArrayList;
import java.util.Scanner;
public class Principal {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        ArrayList<Carro> c1= new ArrayList();
        boolean repetir = true;
        while(repetir){
        System.out.println("====CONCESSIONARIA DO REIS====");
        System.out.println("(1)Cadastrar carro");
        System.out.println("(2)Listar carro");
        System.out.println("(3)Pesquisar carro");
        System.out.println("(4)Remover Carro");
        System.out.println("(5)Sair");
        
        int opcao = input.nextInt();
        
        switch(opcao){
            case 1:
                Scanner carro = new Scanner(System.in);
                System.out.println("===CADASTRAR===");
                System.out.println("Digite o ANO do carro");
                int ano = carro.nextInt();
                System.out.println("Digite o MODELO do carro");
                String modelo = carro.next();
                System.out.println("Digite o NOME do carro");
                String nome = carro.next();
                System.out.println("Digite o GRUPO do carro");
                String grupo = carro.next();
                System.out.println("Digite a QUILOMETRAGEM do carro");
                float km = input.nextFloat();
                System.out.println("Digite o ID do carro");
                int id = carro.nextInt();
                Carro c2 = new Carro();
                c2.setAno(ano);
                c2.setModelo(modelo);
                c2.setGrupo(grupo);
                c2.setNome(nome);
                c2.setKm(km);
                c2.setId(id);
                
                c1.add(c2);
                break;
            case 2:
                System.out.println("====CADASTRADOS====");
                for(int i = 0;i < c1.size();i++){
                     Carro carroId = c1.get(i);
                    System.out.println("Carro de referencia numero:"+ i);
                     System.out.println("====CARRO====");
                    System.out.println("Ano:"+carroId.getAno());
                    System.out.println("Nome:"+carroId.getNome());
                    System.out.println("Modelo:"+carroId.getModelo());
                    System.out.println("Grupo:"+carroId.getGrupo());
                    System.out.println("Quilometragem:"+carroId.getId()+" Km");
                   System.out.println("id:"+carroId.getId());
                    break;    
                }
            case 3:    
                Scanner pesquisa = new Scanner(System.in);
                System.out.println("====PESQUISAR====");
                System.out.println("Digite o id do carro que deseja");
                int idCarro = pesquisa.nextInt();
                for(int i=0;i< c1.size();i++){
                    Carro carroId = c1.get(i);
                    if(idCarro == carroId.getId()){
                        System.out.println("Carro Encontrado");
                        System.out.println("====CARRO====");
                    System.out.println("Ano:"+carroId.getAno());
                    System.out.println("Nome:"+carroId.getNome());
                    System.out.println("Modelo:"+carroId.getModelo());
                    System.out.println("Grupo:"+carroId.getGrupo());
                    System.out.println("Quilometragem:"+carroId.getId()+" Km");
                   System.out.println("id:"+carroId.getId());
                    }
                }
                break;
            case 4:
                Scanner remover = new Scanner(System.in);
                System.out.println("===REMOVER===");
                for(int i=0;i< c1.size();i++){
                    Carro carroId = c1.get(i);
                    System.out.println("Carro de referencia numero:"+ i);
                     System.out.println("====CARRO====");
                    System.out.println("Ano:"+carroId.getAno());
                    System.out.println("Nome:"+carroId.getNome());
                    System.out.println("Modelo:"+carroId.getModelo());
                    System.out.println("Grupo:"+carroId.getGrupo());
                    System.out.println("Quilometragem:"+carroId.getId()+" Km");
                   System.out.println("id:"+carroId.getId());
                }
                System.out.println("Digite o valor da referencia");
                int referencia = remover.nextInt();
                c1.remove(referencia);
                break;
            case 5:
                repetir = false;
                break;
            default:
               System.out.println("Opção inexstente");
        }
        }
